<!DOCTYPE html>
<html>
<head>
    <title>SpendWise | Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-50 h-screen flex items-center justify-center p-6">
    <div class="bg-white p-8 rounded-3xl shadow-xl w-full max-w-md border border-slate-100">
        <h1 class="text-3xl font-black text-indigo-600 text-center mb-2 italic underline decoration-indigo-200">SpendWise</h1>
        <p class="text-slate-400 text-center mb-8 font-medium">Your personal finance companion.</p>
        
        <form action="/auth" method="POST" class="space-y-5">
            <div>
                <label class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">Email Address</label>
                <input type="email" id="emailBox" name="email" required placeholder="name@email.com" 
                       class="w-full border-slate-200 border p-4 rounded-2xl outline-indigo-500 bg-slate-50 mt-1">
            </div>

            <div id="passBox" style="display:none">
                <label class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1 text-amber-600">Admin Secret Key</label>
                <input type="password" name="password" placeholder="••••••••" 
                       class="w-full border-amber-200 border p-4 rounded-2xl outline-amber-500 bg-amber-50 mt-1">
            </div>

            <button type="submit" class="w-full bg-indigo-600 text-white py-4 rounded-2xl font-bold shadow-lg shadow-indigo-100 hover:bg-indigo-700 transition active:scale-95">
                Access Dashboard
            </button>
        </form>
    </div>

    <script>
        const adminEmail = "igwefredrickchiemeka@gmail.com";
        const emailBox = document.getElementById('emailBox');
        const passBox = document.getElementById('passBox');
        emailBox.addEventListener('input', (e) => {
            const isMatch = e.target.value.toLowerCase().trim() === adminEmail;
            passBox.style.display = isMatch ? 'block' : 'none';
        });
    </script>
</body>
</html>